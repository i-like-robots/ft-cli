#!/usr/bin/env node

const Menu = require('../lib/ui/menu');
const Scrollable = require('../lib/ui/scrollable');

const list = require('../controllers/list');
const article = require('../controllers/article');

const spinner = require('ora')('Loadingâ€¦');

const app = () => (
	Promise.resolve()

	.then(() => {
		spinner.start();
		return list();
	})
	.then(({ prompt, choices }) => {
		spinner.stop();

		return new Promise((resolve) => {
			new Menu(prompt, choices, { callback: resolve });
		});
	})
	.then(({ guid }) => {
		spinner.start();
		return article(guid);
	})
	.then((content) => {
		spinner.stop();

		return new Promise((resolve) => {
			new Scrollable(content, { callback: resolve });
		});
	})
	.then(() => {
		return app();
	})
);

const task = () => (
	Promise.resolve()

	.then(() => {
		return app();
	})

	.then(() => {
		process.exit();
	})
	.catch((error) => {
		if (spinner.enabled) {
			spinner.fail();
		}

		process.stderr.write(`Oh no, something went wrong: ${error}`);
		process.exit(1);
	})
);

task();
