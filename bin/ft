#!/usr/bin/env node

const inquirer = require('inquirer');
const ora = require('ora');

const list = require('../controllers/list');
const article = require('../controllers/article');

const spinner = ora('Loadingâ€¦');

Promise.resolve()
	.then(() => {
		spinner.start();

		return list();
	})
	.then(({ choices, message }) => {
		spinner.stop();

		return inquirer.prompt({
			message,
			choices,
			type: 'list',
			name: 'guid'
		});
	})
	.then(({ guid }) => {
		spinner.start();
		return article(guid);
	})
	.then((content) => {
		spinner.stop();
		console.log(content);
	})
	.catch((error) => {
		if (spinner.enabled) {
			spinner.fail();
		}

		console.error(`Oh no, something went wrong: ${error}`);
		process.exit(1);
	});
