#!/usr/bin/env node

const inquirer = require('inquirer');
const ora = require('ora');

const Scrollable = require('../lib/scrollable');
const list = require('../controllers/list');
const article = require('../controllers/article');

const spinner = ora('Loadingâ€¦');

const title = (text) => {
	process.stdout.write('\x1b]2;' + text + '\x1b\x5c');
};

const app = () => (
	Promise.resolve()

	.then(() => {
		spinner.start();
		return list();
	})
	.then(({ choices, message }) => {
		spinner.stop();

		return inquirer.prompt({
			message,
			choices,
			type: 'list',
			name: 'guid'
		});
	})
	.then(({ guid }) => {
		spinner.start();
		return article(guid);
	})
	.then((content) => {
		spinner.stop();

		return new Promise((resolve) => {
			const scrollable = new Scrollable(content, resolve);
			return scrollable.start();
		});
	})
	.then((more) => {
		return more && app();
	})
);

const task = () => (
	Promise.resolve()

	.then(() => {
		// Set the window title
		title('FT ðŸ“°');
		return app();
	})

	.then(() => {
		// Reset the window title
		title('');
		process.exit();
	})
	.catch((error) => {
		if (spinner.enabled) {
			spinner.fail();
		}

		process.stderr.write(`Oh no, something went wrong: ${error}`);
		process.exit(1);
	})
);

task();
